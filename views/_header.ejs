<link rel="stylesheet" href="../assets/css/header.css">

<!-- /*********************************/ -->
<style>
    body{
        margin: 0;
    }
    .header {
        background-color: #00bbff;
        display: flex;
        justify-content: space-between;
        height: 3rem;
        font-weight: bold;
        color: white;
        position: sticky;
        top: 0;
        
    }

    li a {
        text-decoration: none;
        font-weight: bold;
        padding: 3px;
        color: white;
    }

    .inout {
        display: flex;

    }

    .heading {
        font-size: 2rem;
    }
</style>
<!-- /*********************************/ -->



<header class="header">
    <div class="heading">ConnectEye</div>
    <ul style="list-style: none;">
        <% if(locals.user){ %>
            <div class="inout">

                <li>
                    <a href="/users/profile">
                        <%= user.name %>
                    </a>
                </li>


                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>

            </div>
            <% }else{%>
                <div class="inout">
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                </div>
                <%}%>
    </ul>
</header>